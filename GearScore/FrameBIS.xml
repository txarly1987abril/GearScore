<Ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns="http://www.blizzard.com/wow/ui/">

<!-- Template para los slots de equipamiento -->
<Button name="GS_GearSlotTemplate" virtual="true" toplevel="true" movable="true" enableMouse="true">
    <Backdrop bgFile="Interface\PaperDoll\UI-PaperDoll-Slot-Head.blp" />
    <Size><AbsDimension x="36" y="36" /></Size>
    <Scripts>
        <OnEnter>
            -- Aquí puedes poner el tooltip personalizado para tu BIS
        </OnEnter>
        <OnLeave>GameTooltip:Hide()</OnLeave>
        <OnClick>
            -- Aquí puedes poner lógica personalizada para tu BIS
        </OnClick>
    </Scripts>
</Button>

<!-- Frame BIS principal con textos informativos -->
<Frame name="BIS_GearFrame" parent="UIParent" toplevel="true" movable="true" enableMouse="true">
    <Size>
        <AbsDimension x="500" y="450" />
    </Size>
    <Anchors>
        <Anchor point="CENTER">
            <Offset x="0" y="0" />
        </Anchor>
    </Anchors>
    <Backdrop bgFile="Interface\AchievementFrame\UI-Achievement-StatsBackground" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="false">
        <BackgroundInsets>
            <AbsInset left="11" right="12" top="12" bottom="11" />
        </BackgroundInsets>
        <TileSize>
            <AbsValue val="32" />
        </TileSize>
        <EdgeSize>
            <AbsValue val="32" />
        </EdgeSize>
    </Backdrop>
    <Layers>
        <Layer level="ARTWORK">
            <!-- Texto informativo superior -->
            <FontString name="BIS_TitleText" inherits="GameFontNormalLarge" text="Gestor de equipo BiS">
                <Size><AbsDimension x="300" y="24" /></Size>
                <Anchors>
                    <Anchor point="TOP" relativeTo="BIS_GearFrame">
                        <Offset x="-5" y="-10" />
                    </Anchor>
                </Anchors>
            </FontString>
            <!-- Texto dinámico para mostrar el set actual -->
            <FontString name="BIS_SetText" inherits="GameFontNormal" text="Main">
                <Size><AbsDimension x="100" y="18" /></Size>
                <Anchors>
                    <Anchor point="TOP" relativeTo="BIS_TitleText">
                        <Offset x="0" y="-20" />
                    </Anchor>
                </Anchors>
            </FontString>
            <!-- Texto de ayuda en verde -->
            <FontString name="BIS_HintText" inherits="GameFontNormal" text="|cff22ff22Da click a cualquier slot para agregar su pieza correspondiente|r" justifyH="CENTER">
                <Size><AbsDimension x="400" y="18" /></Size>
                <Anchors>
                    <Anchor point="TOP" relativeTo="BIS_SetText">
                        <Offset x="0" y="-10" />
                    </Anchor>
                </Anchors>
            </FontString>
        </Layer>
        <Layer level="OVERLAY">
            <FontString name="BIS_StatsTitle1" inherits="GameFontNormalLarge" text="Bonificadores" justifyH="CENTER">
                <Size><AbsDimension x="300" y="24"/></Size>
                <Anchors>
                    <Anchor point="CENTER" relativeTo="BIS_GearFrame">
                        <Offset x="0" y="130" />
                    </Anchor>
                </Anchors>
            </FontString>
            <FontString name="BIS_StatsTitle2" inherits="GameFontNormalLarge" text="|cffff2222raciales|r" justifyH="CENTER">
                <Size><AbsDimension x="300" y="24"/></Size>
                <Anchors>
                    <Anchor point="TOP" relativeTo="BIS_StatsTitle1">
                        <Offset x="0" y="-22" />
                    </Anchor>
                </Anchors>
            </FontString>
            <FontString name="BIS_StatsText" inherits="GameFontNormal" text="" justifyH="CENTER">
                <Size><AbsDimension x="220" y="220"/></Size>
                <Anchors>
                    <Anchor point="CENTER" relativeTo="BIS_GearFrame">
                        <Offset x="0" y="-30" />
                    </Anchor>
                </Anchors>
            </FontString>
        </Layer>
    </Layers>
    <Frames>
        <!-- Botón de cerrar -->
        <Button name="BIS_CloseButton" inherits="UIPanelCloseButton">
            <Size><AbsDimension x="32" y="32" /></Size>
            <Anchors>
                <Anchor point="TOPRIGHT" relativeTo="BIS_GearFrame">
                    <Offset x="-6" y="-6" />
                </Anchor>
            </Anchors>
            <Scripts>
                <OnClick>
                    self:GetParent():Hide()
                </OnClick>
            </Scripts>
        </Button>
        <!-- Botón Main -->
        <Button name="BIS_MainButton" inherits="UIPanelButtonTemplate" text="Main">
            <Size><AbsDimension x="60" y="24" /></Size>
            <Anchors>
                <Anchor point="TOPLEFT" relativeTo="BIS_GearFrame">
                    <Offset x="20" y="-10" />
                </Anchor>
            </Anchors>
        </Button>
        <!-- Botón Dual -->
        <Button name="BIS_DualButton" inherits="UIPanelButtonTemplate" text="Dual">
            <Size><AbsDimension x="60" y="24" /></Size>
            <Anchors>
                <Anchor point="TOPLEFT" relativeTo="BIS_GearFrame">
                    <Offset x="90" y="-10" />
                </Anchor>
            </Anchors>
        </Button>
        <!-- Botón PvP -->
        <Button name="BIS_PvPButton" inherits="UIPanelButtonTemplate" text="PvP">
            <Size><AbsDimension x="60" y="24" /></Size>
            <Anchors>
                <Anchor point="TOPRIGHT" relativeTo="BIS_GearFrame">
                    <Offset x="-95" y="-10" />
                </Anchor>
            </Anchors>
        </Button>
        <DressUpModel xsi:type="PlayerModel" name="BIS_Model">
            <Size>
                <AbsDimension x="220" y="320" />
            </Size>
            <Anchors>
                <Anchor point="TOPLEFT" relativeTo="BIS_GearFrame">
                    <Offset x="140" y="-90" />
                </Anchor>
            </Anchors>
        </DressUpModel>
        <!-- Slots de equipamiento BIS (desplazados hacia abajo) -->
        <Button name="BIS_Frame1" id="1" inherits="GS_GearSlotTemplate" parent="BIS_GearFrame">
            <Backdrop bgFile="Interface\PaperDoll\UI-PaperDoll-Slot-Head.blp" />
            <Anchors><Anchor point="TOPLEFT" relativeTo="BIS_GearFrame"><Offset x="90" y="-90" /></Anchor></Anchors>
        </Button>
        <Button name="BIS_Frame2" id="2" inherits="GS_GearSlotTemplate" parent="BIS_GearFrame">
            <Backdrop bgFile="Interface\PaperDoll\UI-PaperDoll-Slot-Neck.blp" />
            <Anchors><Anchor point="TOPLEFT" relativeTo="BIS_GearFrame"><Offset x="90" y="-135" /></Anchor></Anchors>
        </Button>
        <Button name="BIS_Frame3" id="3" inherits="GS_GearSlotTemplate" parent="BIS_GearFrame">
            <Backdrop bgFile="Interface\PaperDoll\UI-PaperDoll-Slot-Shoulder.blp" />
            <Anchors><Anchor point="TOPLEFT" relativeTo="BIS_GearFrame"><Offset x="90" y="-180" /></Anchor></Anchors>
        </Button>
        <Button name="BIS_Frame5" id="5" inherits="GS_GearSlotTemplate" parent="BIS_GearFrame">
            <Backdrop bgFile="Interface\PaperDoll\UI-PaperDoll-Slot-Chest.blp" />
            <Anchors><Anchor point="TOPLEFT" relativeTo="BIS_GearFrame"><Offset x="90" y="-270" /></Anchor></Anchors>
        </Button>
        <Button name="BIS_Frame15" id="15" inherits="GS_GearSlotTemplate" parent="BIS_GearFrame">
            <Backdrop bgFile="Interface\PaperDoll\UI-PaperDoll-Slot-Chest.blp" />
            <Anchors><Anchor point="TOPLEFT" relativeTo="BIS_GearFrame"><Offset x="90" y="-225" /></Anchor></Anchors>
        </Button>
        <Button name="BIS_Frame9" id="9" inherits="GS_GearSlotTemplate" parent="BIS_GearFrame">
            <Backdrop bgFile="Interface\PaperDoll\UI-PaperDoll-Slot-Wrists.blp" />
            <Anchors><Anchor point="TOPLEFT" relativeTo="BIS_GearFrame"><Offset x="90" y="-315" /></Anchor></Anchors>
        </Button>
        <Button name="BIS_Frame10" id="10" inherits="GS_GearSlotTemplate" parent="BIS_GearFrame">
            <Backdrop bgFile="Interface\PaperDoll\UI-PaperDoll-Slot-Hands.blp" />
            <Anchors><Anchor point="TOPLEFT" relativeTo="BIS_GearFrame"><Offset x="90" y="-360" /></Anchor></Anchors>
        </Button>
        <Button name="BIS_Frame7" id="7" inherits="GS_GearSlotTemplate" parent="BIS_GearFrame">
            <Backdrop bgFile="Interface\PaperDoll\UI-PaperDoll-Slot-Legs.blp" />
            <Anchors><Anchor point="TOPLEFT" relativeTo="BIS_GearFrame"><Offset x="350" y="-135" /></Anchor></Anchors>
        </Button>
        <Button name="BIS_Frame8" id="8" inherits="GS_GearSlotTemplate" parent="BIS_GearFrame">
            <Backdrop bgFile="Interface\PaperDoll\UI-PaperDoll-Slot-Feet.blp" />
            <Anchors><Anchor point="TOPLEFT" relativeTo="BIS_GearFrame"><Offset x="350" y="-180" /></Anchor></Anchors>
        </Button>
        <Button name="BIS_Frame11" id="11" inherits="GS_GearSlotTemplate" parent="BIS_GearFrame">
            <Backdrop bgFile="Interface\PaperDoll\UI-PaperDoll-Slot-Finger.blp" />
            <Anchors><Anchor point="TOPLEFT" relativeTo="BIS_GearFrame"><Offset x="350" y="-225" /></Anchor></Anchors>
        </Button>
        <Button name="BIS_Frame6" id="6" inherits="GS_GearSlotTemplate" parent="BIS_GearFrame">
            <Backdrop bgFile="Interface\PaperDoll\UI-PaperDoll-Slot-Waist.blp" />
            <Anchors><Anchor point="TOPLEFT" relativeTo="BIS_GearFrame"><Offset x="350" y="-90" /></Anchor></Anchors>
        </Button>
        <Button name="BIS_Frame12" id="12" inherits="GS_GearSlotTemplate" parent="BIS_GearFrame">
            <Backdrop bgFile="Interface\PaperDoll\UI-PaperDoll-Slot-Finger.blp" />
            <Anchors><Anchor point="TOPLEFT" relativeTo="BIS_GearFrame"><Offset x="350" y="-270" /></Anchor></Anchors>
        </Button>
        <Button name="BIS_Frame13" id="13" inherits="GS_GearSlotTemplate" parent="BIS_GearFrame">
            <Backdrop bgFile="Interface\PaperDoll\UI-PaperDoll-Slot-Trinket.blp" />
            <Anchors><Anchor point="TOPLEFT" relativeTo="BIS_GearFrame"><Offset x="350" y="-315" /></Anchor></Anchors>
        </Button>
        <Button name="BIS_Frame14" id="14" inherits="GS_GearSlotTemplate" parent="BIS_GearFrame">
            <Backdrop bgFile="Interface\PaperDoll\UI-PaperDoll-Slot-Trinket.blp" />
            <Anchors><Anchor point="TOPLEFT" relativeTo="BIS_GearFrame"><Offset x="350" y="-360" /></Anchor></Anchors>
        </Button>
        <Button name="BIS_Frame17" id="17" inherits="GS_GearSlotTemplate" parent="BIS_GearFrame">
            <Backdrop bgFile="Interface\PaperDoll\UI-PaperDoll-Slot-SecondaryHand.blp" />
            <Anchors><Anchor point="TOPLEFT" relativeTo="BIS_GearFrame"><Offset x="230" y="-400" /></Anchor></Anchors>
        </Button>
        <Button name="BIS_Frame18" id="18" inherits="GS_GearSlotTemplate" parent="BIS_GearFrame">
            <Backdrop bgFile="Interface\PaperDoll\UI-PaperDoll-Slot-Ranged.blp" />
            <Anchors><Anchor point="TOPLEFT" relativeTo="BIS_GearFrame"><Offset x="270" y="-400" /></Anchor></Anchors>
        </Button>
        <Button name="BIS_Frame16" id="16" inherits="GS_GearSlotTemplate" parent="BIS_GearFrame">
            <Backdrop bgFile="Interface\PaperDoll\UI-PaperDoll-Slot-MainHand.blp" />
            <Anchors><Anchor point="TOPLEFT" relativeTo="BIS_GearFrame"><Offset x="190" y="-400" /></Anchor></Anchors>
        </Button>
    </Frames>
</Frame>

</Ui>